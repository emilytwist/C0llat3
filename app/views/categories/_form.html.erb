<%= simple_form_for @category, :html => { :class => "form-horizontal product" } do |f| %>

  <% if @category.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@study.errors.count, "error") %> prohibited this category from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="dl-horizontal">
    <%= f.input :name, label: 'Enter name', hint: 'e.g. Type of industry', error: 'You must enter a name' %>
    <%= f.input :description, label: 'Enter description', hint: 'Enter a description for the category', error: 'You must enter a description for the category' %>
  </div>

  <div class="form-group">
    <div class="col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
